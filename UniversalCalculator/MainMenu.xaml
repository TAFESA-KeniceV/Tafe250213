<Page
    x:Class="Calculator.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<!--totally changing the navagation-->
    <Grid>
		<StackPanel Margin="20" HorizontalAlignment="Center">
			<TextBlock FontSize="50" Text="Universal Calculator"/>
			<Image Source="/Images/abacus.jpg" Width="400" Margin="10"/>
			<StackPanel Margin="10" HorizontalAlignment="Center">
				<Button x:Name="MathsCalculator" FontSize="30" Content="Maths Calculator" Margin="10" Width="300" HorizontalAlignment="Center" Click="MathsCalculator_Click"/>
				<Button x:Name="MortgageCalculator" FontSize="30" Content="Mortgage Calculator" Margin="10" Width="300" HorizontalAlignment="Center" Click="MortgageCalculator_Click"/>
				<Button x:Name="CurrencyCalculator" FontSize="30" Content="Currency Calculator" Margin="10" Width="300" HorizontalAlignment="Center" Click="CurrencyCalculator_Click"/>
				<Button x:Name="Exit" FontSize="30" Content="Exit" Margin="10" Width="300" HorizontalAlignment="Center"/>
			</StackPanel>
		</StackPanel>
    </Grid>
</Page>
