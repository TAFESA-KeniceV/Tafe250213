<Page
    x:Class="Calculator.MortgagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
		<StackPanel Margin="20" HorizontalAlignment="Center">
			<TextBlock FontSize="50" Text="Mortgage Calculator"/>
			
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="Principal Borrowed: $" FontSize="30" Margin="10"/>
					<TextBox x:Name="principalTextBox" Width="300" Margin="10"/>
				</StackPanel>
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="Years:" FontSize="30" Margin="10"/>
					<TextBox x:Name="yearsTextBox" Width="300" Margin="10"/>
				</StackPanel>
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="Months:" FontSize="30" Margin="10"/>
					<TextBox x:Name="monthsTextBox" Width="300" Margin="10"/>
				</StackPanel>
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="Annual Interest Rate: %" FontSize="30" Margin="10"/>
					<TextBox x:Name="anInTextBox" Width="300" Margin="10"/>
				</StackPanel>
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="Monthly Interest Rate: %" FontSize="30" Margin="10"/>
					<TextBox x:Name="monInTextBox" Width="300" Margin="10" IsReadOnly="True"/>
				</StackPanel>
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="Monthly Repayment:" FontSize="30" Margin="10"/>
					<TextBox x:Name="monthlyRepayTextBox" Width="300" Margin="10" IsReadOnly="True"/>
				</StackPanel>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<Button x:Name="calcButton" Content="Calculate" FontSize="30" Width="300" Click="calcButton_Click"/>
				<Button x:Name="Exit" FontSize="30" Content="Exit" Margin="10" Width="300" Click="Exit_Click"/>
			</StackPanel>
		</StackPanel>
			
	</Grid>
</Page>
